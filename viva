-- create
CREATE TABLE client_master(
  client_no varchar(1), name varchar(20), address1 varchar(20), 
  city varchar(20), state varchar(20), pincode int, bal_due int);
  
CREATE TABLE Product_master( Product_no varchar(4), Description varchar(20),
  Profit_percent int, Unit_measure varchar(20), Qty_on_hand int, 
  Sell_price int, Cost_price int);

