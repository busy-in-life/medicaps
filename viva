-- fetch 
SELECT name FROM client_master;
SELECT name,city FROM client_master;
SELECT Description FROM Product_master;
SELECT * from client_master where city = 'Bombay';
SELECT * from client_master where client_no>='1' && client_no<'3';
update Product_master set Sell_price=1150 
where Description = '1.44 floppy drive';
select * from Product_master;
delete from client_master where client_no = '1';
select * from client_master;
select * from Product_master where Description = '1.44 drives'
&& Description = '1.22 drive';
select * from Product_master;
